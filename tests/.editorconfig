root = true

[*.cs]
# var preferences - prefer var when type is evident
csharp_style_var_for_built_in_types = true:warning
csharp_style_var_when_type_is_apparent = true:warning
csharp_style_var_elsewhere = false:suggestion

# Code block preferences
csharp_prefer_braces = when_multiline:suggestion

# Relax code quality rules in test projects
# Test classes can be longer and have more methods
dotnet_diagnostic.LNT001.severity = none  # Long methods OK in tests
dotnet_diagnostic.LNT005.severity = none  # Large test classes OK
dotnet_diagnostic.LNT007.severity = none  # Empty catch blocks OK in test setup
dotnet_diagnostic.LNT002.severity = none  # Many parameters OK in test cases
